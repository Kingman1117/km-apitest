{
  "caseId": "1150695810001062395",
  "name": "管理后台正常添加课外服务",
  "group": "admin",
  "needsLogin": "admin",
  "steps": [
    {
      "action": "goto",
      "url": "http://i.edu.fkw.com.faidev.cc/?__aacct=huaedu1#/curriculum/extraService"
    },
    {
      "action": "wait",
      "ms": 2000
    },
    {
      "action": "click",
      "selector": "button:has-text('添加服务')",
      "fallbacks": ["text=添加服务", "button:has-text('添加')"],
      "description": "点击添加服务按钮"
    },
    {
      "action": "wait",
      "ms": 1500
    },
    {
      "action": "fill",
      "selector": "input[placeholder*='名称']",
      "value": "课外服务{timestamp}",
      "fallbacks": ["input[placeholder*='请输入名称']", "input[placeholder*='服务名称']"],
      "description": "输入服务名称"
    },
    {
      "action": "selectResource",
      "type": "image",
      "description": "选择服务主图"
    },
    {
      "action": "wait",
      "ms": 1000
    },
    {
      "action": "click",
      "selector": "button:has-text('保存')",
      "fallbacks": ["button:has-text('保 存')", ".footer button.el-button--primary"],
      "force": true,
      "description": "点击保存按钮"
    },
    {
      "action": "wait",
      "ms": 2000
    },
    {
      "action": "verify",
      "expect": "保存成功|操作成功|添加成功|课外服务",
      "snapshot": true,
      "description": "验证正常添加课外服务"
    }
  ],
  "cleanup": null,
  "verify": "保存成功|操作成功|添加成功"
}
