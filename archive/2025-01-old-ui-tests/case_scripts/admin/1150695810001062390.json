{
  "caseId": "1150695810001062390",
  "name": "管理后台正常添加系列课",
  "group": "admin",
  "needsLogin": "admin",
  "steps": [
    {
      "action": "goto",
      "url": "http://i.edu.fkw.com.faidev.cc/?__aacct=huaedu1#/curriculum/onlineCourse/specialColumn"
    },
    {
      "action": "wait",
      "ms": 2000
    },
    {
      "action": "click",
      "selector": "button:has-text('添加课程')",
      "fallbacks": ["text=添加课程"],
      "description": "点击添加课程按钮"
    },
    {
      "action": "wait",
      "ms": 1500
    },
    {
      "action": "click",
      "selector": ".type-item:first-child",
      "fallbacks": [".type-item", ".course-type-item:first-child"],
      "description": "选择任意一个课程类型"
    },
    {
      "action": "wait",
      "ms": 1500
    },
    {
      "action": "fill",
      "selector": "input[placeholder*='名称']",
      "value": "系列课{timestamp}",
      "fallbacks": ["input[placeholder*='请输入名称']", "input[placeholder*='课程名称']"],
      "description": "填写课程名称"
    },
    {
      "action": "selectResource",
      "type": "image",
      "description": "选择封面图片"
    },
    {
      "action": "wait",
      "ms": 1000
    },
    {
      "action": "click",
      "selector": "button:has-text('保存')",
      "fallbacks": ["button:has-text('保 存')", ".footer button.el-button--primary"],
      "force": true,
      "description": "点击保存按钮"
    },
    {
      "action": "wait",
      "ms": 2000
    },
    {
      "action": "verify",
      "expect": "保存成功|操作成功|添加成功|系列课",
      "snapshot": true,
      "description": "验证正常创建系列课"
    }
  ],
  "cleanup": null,
  "verify": "保存成功|操作成功|添加成功"
}
