{
  "caseId": "1150695810001062392",
  "name": "管理后台正常添加音频课程",
  "group": "admin",
  "needsLogin": "admin",
  "steps": [
    {
      "action": "goto",
      "url": "http://i.edu.fkw.com.faidev.cc/?__aacct=huaedu1#/curriculum/onlineCourse/audioManage"
    },
    {
      "action": "wait",
      "ms": 2000
    },
    {
      "action": "click",
      "selector": "button:has-text('添加音频')",
      "fallbacks": ["text=添加音频", "button:has-text('添加')"],
      "description": "点击添加音频按钮"
    },
    {
      "action": "wait",
      "ms": 1500
    },
    {
      "action": "fill",
      "selector": "input[placeholder*='名称']",
      "value": "音频课程{timestamp}",
      "fallbacks": ["input[placeholder*='请输入名称']", "input[placeholder*='标题']"],
      "description": "输入音频名称"
    },
    {
      "action": "selectResource",
      "type": "audio",
      "description": "选择音频文件"
    },
    {
      "action": "wait",
      "ms": 1000
    },
    {
      "action": "click",
      "selector": "button:has-text('保存')",
      "fallbacks": ["button:has-text('保 存')", ".footer button.el-button--primary"],
      "force": true,
      "description": "点击保存按钮"
    },
    {
      "action": "wait",
      "ms": 2000
    },
    {
      "action": "verify",
      "expect": "保存成功|操作成功|添加成功|音频",
      "snapshot": true,
      "description": "验证正常添加音频课程"
    }
  ],
  "cleanup": null,
  "verify": "保存成功|操作成功|添加成功"
}
