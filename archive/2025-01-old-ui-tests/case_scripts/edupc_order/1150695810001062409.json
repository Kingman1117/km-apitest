{
  "caseId": "1150695810001062409",
  "name": "edupc正常访问图文，提交免费/付费订单",
  "group": "edupc_order",
  "needsLogin": "student_edupc",
  "steps": [
    {
      "action": "goto",
      "url": "http://huaedu1-110.365hjy.com.faidev.cc/itd.jsp?id=2288",
      "description": "访问免费图文页面"
    },
    {
      "action": "wait",
      "ms": 2000
    },
    {
      "action": "click",
      "selector": "a:has-text('免费购买')",
      "fallbacks": ["button:has-text('免费购买')", "text=免费购买"],
      "description": "点击免费购买按钮（图文免费=免费购买）"
    },
    {
      "action": "wait",
      "ms": 1500
    },
    {
      "action": "click",
      "selector": "button:has-text('提交订单')",
      "fallbacks": ["text=提交订单", ".submit-btn"],
      "description": "点击提交订单"
    },
    {
      "action": "wait",
      "ms": 2000
    },
    {
      "action": "verify",
      "expect": "订单|成功|已购买|支付",
      "snapshot": true,
      "description": "验证免费图文订单提交成功"
    },
    {
      "action": "goto",
      "url": "http://huaedu1-110.365hjy.com.faidev.cc/itd.jsp?id=2289",
      "description": "访问付费图文页面"
    },
    {
      "action": "wait",
      "ms": 2000
    },
    {
      "action": "click",
      "selector": "a:has-text('购买内容')",
      "fallbacks": ["button:has-text('购买内容')", "text=购买内容"],
      "description": "点击购买内容按钮（图文付费=购买内容）"
    },
    {
      "action": "wait",
      "ms": 1500
    },
    {
      "action": "click",
      "selector": "text=使用",
      "fallbacks": ["button:has-text('使用')", ".use-balance", "label:has-text('使用')"],
      "description": "点击使用启用余额抵扣"
    },
    {
      "action": "wait",
      "ms": 1000
    },
    {
      "action": "click",
      "selector": "button:has-text('提交订单')",
      "fallbacks": ["text=提交订单", ".submit-btn"],
      "description": "点击提交订单"
    },
    {
      "action": "wait",
      "ms": 2000
    },
    {
      "action": "verify",
      "expect": "订单|成功|已购买|支付",
      "snapshot": true,
      "description": "验证付费图文订单提交成功"
    }
  ],
  "cleanup": {
    "type": "refund",
    "adminOrderUrl": "http://i.edu.fkw.com.faidev.cc/?__aacct=huaedu1#/order/index"
  },
  "verify": "订单|成功|已购买"
}
