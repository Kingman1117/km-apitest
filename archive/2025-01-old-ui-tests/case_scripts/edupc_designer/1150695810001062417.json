{
  "caseId": "1150695810001062417",
  "name": "edupc设计器正常添加各基础和排版模块，访客态正常预览",
  "group": "edupc_designer",
  "needsLogin": "admin",
  "steps": [
    { "action": "goto", "url": "http://huaedu1-110.edu.fkw.com.faidev.cc/col.jsp?id=130" },
    { "action": "wait", "ms": 2000 },
    {
      "action": "click",
      "selector": ".funPanelEntryBtnSvg, [class*='add_module']",
      "fallbacks": ["getByRole('img').nth(5)"],
      "description": "右下角模块图标打开左侧面板"
    },
    { "action": "click", "selector": ".add_module_item_text", "description": "基础→文本" },
    { "action": "wait", "ms": 500 },
    { "action": "fill", "selector": "[contenteditable=true], .text-module input", "value": "测试文本_{timestamp}" },
    { "action": "click", "selector": ".add_module_item_imageModule, .add_module_item_img", "description": "基础→图片" },
    { "action": "wait", "ms": 500 },
    { "action": "click", "selector": "text=添加图片", "fallbacks": ["button:has-text('添加图片')"] },
    { "action": "wait", "ms": 1200 },
    { "action": "click", "selector": ".fa-basic-upload-view-ui-file-layer--content", "force": true },
    { "action": "wait", "ms": 400 },
    { "action": "click", "selector": "button:has-text('确 定')", "force": true },
    { "action": "wait", "ms": 500 },
    { "action": "click", "selector": ".add_module_item_buttonModule", "description": "基础→按钮" },
    { "action": "click", "selector": ".add_module_item_rich", "description": "基础→图文展示" },
    { "action": "click", "selector": ".add_module_item_listPhotos", "description": "基础→列表多图" },
    { "action": "click", "selector": "text=轮播多图", "description": "基础→轮播多图" },
    { "action": "click", "selector": "text=课程搜索", "description": "基础→课程搜索" },
    { "action": "click", "selector": "text=在线地图", "description": "基础→在线地图" },
    { "action": "click", "selector": ".add_module_item_tabpack, text=横向标签", "description": "排版→横向标签" },
    { "action": "wait", "ms": 500 },
    { "action": "click", "selector": "text=添加模块" },
    { "action": "click", "selector": ".add_module_item_text", "description": "添加文本" },
    { "action": "click", "selector": "text=标签2" },
    { "action": "click", "selector": "text=添加模块" },
    { "action": "click", "selector": ".add_module_item_buttonModule", "description": "添加按钮" },
    { "action": "click", "selector": "text=通栏排版", "description": "排版→通栏排版" },
    { "action": "wait", "ms": 500 },
    { "action": "click", "selector": "text=保存", "fallbacks": ["button:has-text('保存')"] },
    { "action": "wait", "ms": 2000 },
    { "action": "click", "selector": "text=预览", "fallbacks": ["button:has-text('预览')"] },
    { "action": "wait", "ms": 3000 },
    {
      "action": "verify",
      "expect": "预览|访客|页面",
      "snapshot": true,
      "description": "验证基础排版模块添加并预览成功"
    }
  ],
  "cleanup": null,
  "verify": "预览|访客|页面"
}
