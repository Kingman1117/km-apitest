  "group": "mobile_designer",
  "needsLogin": "admin",
  "steps": [
    {
      "action": "goto",
      "url": "http://i.edu.fkw.com.faidev.cc/editorNew.jsp?_wxappId=110&__aacct=huaedu1#/"
    },
    {
      "action": "wait",
      "ms": 3000
    },
    {
      "action": "evaluate",
      "script": "const btn = document.querySelector('.know-btn, button:has-text(\"我知道了\"), .guide-close'); if(btn) btn.click();",
